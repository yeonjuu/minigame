<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@android:id/tabhost"
    tools:context=".Record">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/tabcontent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f000"
                android:id="@+id/tabNana"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="나나를 이겨라 TOP 20"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:text="순위"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="닉네임"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="점수"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                
                <ScrollView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">

                    <TextView
                        android:id="@+id/nanaRank"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:lineSpacingExtra="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="순위"/>
                </ScrollView>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="내순위 "
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/myNana"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="RANK"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#00f000"
                android:id="@+id/tabDdubi">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="뚜비의 말랑말랑 수학교실 TOP 20"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:text="순위"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="닉네임"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="점수"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <ScrollView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">
                    <TextView
                        android:gravity="center"
                        android:lineSpacingExtra="15dp"
                        android:id="@+id/ddubiRank"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="순위"/>
                </ScrollView>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="내순위 "
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/myDdubi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="RANK"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/purple_200"
                android:id="@+id/tabBoradori">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="보라돌이의 찾아라 짝 TOP 20"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:text="순위"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="닉네임"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="점수"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <ScrollView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">
                    <TextView
                        android:gravity="center"
                        android:lineSpacingExtra="15dp"
                        android:id="@+id/boradoriRank"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="순위"/>
                </ScrollView>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="내순위 "
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/myBoradori"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="RANK"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f00000"
                android:id="@+id/tabBbo">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="뽀의 쿠키 사수 대작전 TOP 20"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:text="순위"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="닉네임"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="점수"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <ScrollView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">
                    <TextView
                        android:id="@+id/bboRank"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:lineSpacingExtra="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="순위"/>
                </ScrollView>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="내순위 "
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/myBbo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="RANK"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</TabHost>