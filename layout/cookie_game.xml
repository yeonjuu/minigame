<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cookiebkg">

    <Button
        android:id="@+id/start"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="START" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/c1"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/c1" />

        <ImageView
            android:id="@+id/c2"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/c2"/>

        <ImageView
            android:id="@+id/c3"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/c3" />

        <ImageView
            android:id="@+id/c4"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/c4" />

        <ImageView
            android:id="@+id/c5"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/c5" />


        <ImageView
            android:id="@+id/c6"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/c6" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="쿠키 굽는 중이에요 :) \n 조금만 기다려주세요!"
        android:layout_centerInParent="true"/>


    <FrameLayout
        android:id="@+id/moveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="bottom|left"
            android:background="@drawable/btn"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            app:backgroundTint = "@null"
            android:layout_marginBottom="10dp"
            android:text="L" />



        <ImageView
            android:id="@+id/bbo"
            android:visibility="visible"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bbo_cookie" />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="bottom|right"
            android:text="R"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint = "@null"
            android:background="@drawable/btn" />
    </FrameLayout>


</RelativeLayout>