<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="닉네임 입력"/>
            <EditText
                android:id="@+id/nickname"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:hint="ex)암사동불주먹"/>
            <Button
                android:id="@+id/btnNick"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="확인"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvChk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="확인 버튼을 눌러주세요"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/avaLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="캐릭터 선택"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/nana"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/nana"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/bbo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/bbo"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="나나"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="뽀"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/ddubi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ddubi"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/boradori"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/boradori"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="뚜비"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="보라돌이"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnAva"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="선택완료"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>