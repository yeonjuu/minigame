                    android:layout_height="match_parent"
                    android:id="@+id/cover8"
                    android:visibility="invisible"
                    android:src="@drawable/cardback"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cover9"
                    android:visibility="invisible"
                    android:src="@drawable/cardback"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/cover10"
                    android:src="@drawable/cardback"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/cover11"
                    android:src="@drawable/cardback"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/cover12"
                    android:src="@drawable/cardback"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/cover13"
                    android:src="@drawable/cardback"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/cover14"
                    android:src="@drawable/cardback"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/cover15"
                    android:src="@drawable/cardback"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/cover16"
                    android:src="@drawable/cardback"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
